<%= form_for @project do |f| %>
  <h2>Create a project</h2>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>

    <div>
        <%= f.label :funding_goal %>
        <%= f.number_field :funding_goal %>
    </div>

    <div>
        <%= f.label :project_end_date %>
        <%= f.date_field :project_end_date %>
    </div>

    <%= f.submit "Create Project" %>
<% end %>
